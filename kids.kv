MDScreen:
    name: "kids"

    MDBoxLayout:
        orientation:"vertical"
        MDBoxLayout:
            md_bg_color: 0.9, 0.9 , 0.9
            orientation:"vertical"
            adaptive_height:True
            MDBoxLayout:
                size_hint_y:None
                height:dp(65)
                AnchorLayout:
                    anchor_y:'top'
                    anchor_x:'left'
                    MDIconButton:
                        md_bg_color:app.theme_cls.primary_color
                        icon:"dots-vertical"
                AnchorLayout:
                    anchor_y:'top'
                    anchor_x:'right'
                    MDBoxLayout:
                        adaptive_size:True
                        MDIconButton:
                            icon:"magnify"
                            md_bg_color:app.theme_cls.primary_color
                        MDIconButton:
                            icon:"cart"
                            md_bg_color:app.theme_cls.primary_color
            MDBoxLayout:
                size_hint_y:None
                height:dp(55)
                spacing:dp(12)
                padding:dp(12)
                TabCard:
                    icon:'shoe-formal'
                    text:"Men"
                    on_press: app.switch_to_shoes_screen()
                    md_bg_color:app.theme_cls.primary_color
                TabCard:
                    icon:'shoe-heel'
                    text:"Women"
                    on_press: app.switch_to_women_screen()
                    md_bg_color:app.theme_cls.primary_color
                TabCard:
                    icon:'shoe-sneaker'
                    text:"Kids"
                    on_press: app.switch_to_kids_screen()
                    md_bg_color:app.theme_cls.primary_color
        MDBoxLayout:
            ScrollView:
                MDGridLayout:
                    md_bg_color: 1,1,1
                    cols:2
                    padding:dp(20)
                    spacing:dp(20)
                    adaptive_height:True
                    ElementCard:
                        image:'images/k1.png'
                        price:'Ugx 23400'
                        rate:"  3.5/5  Oxford"
                    ElementCard:
                        image:'images/k4.png'
                        price:'ugx 35700'
                        rate:"   5/5 Nike"
                    ElementCard:
                        image:'images/k5.png'
                        price:'Ugx 22500'
                        rate:"   4.5/5  Gentle"
                    ElementCard:
                        image:'images/m2.png'
                        price:'Ugx 37000'
                        rate:"   3.0/5 Easy"
                    ElementCard:
                        image:'images/m5.png'
                        price:'Ugx 45000'
                        rate:"   4.0/5 Nike"
                    ElementCard:
                        image:'images/m6.png'
                        price:'Ugx 26500'
                        rate:"   3.0/5 Jordan"
        # bottom navigation appbar
        MDBoxLayout:
            size_hint_y:None
            md_bg_color:app.theme_cls.primary_color
            height:dp(60)
            padding:[0,0,0,15]
            MDBoxLayout:
                orientation:'vertical'
                MDIconButton:
                    pos_hint:{'center_x':.5,'center_y':.5}
                    icon:'home'
                    theme_text_color:'Custom'
                    text_color:  1,1, 1, 1
                MDLabel:
                    text:'Home'
                    valign:"center"
                    theme_text_color:'Custom'
                    text_color:  0,0,0,1
                    halign:"center"
            MDBoxLayout:
                orientation:'vertical'
                MDIconButton:
                    pos_hint:{'center_x':.5,'center_y':.5}
                    icon:'tag'
                    theme_text_color:'Custom'
                    text_color:   1,1, 1, 1

                MDLabel:
                    text:'Category'
                    theme_text_color:'Custom'
                    text_color: 0,0,0,1
                    valign:"center"
                    halign:"center"
            MDBoxLayout:
                orientation:'vertical'
                MDIconButton:
                    pos_hint:{'center_x':.5,'center_y':.5}
                    icon:'cards-heart'
                    theme_text_color:'Custom'
                    text_color:   1,1, 1, 1
                MDLabel:
                    text:'Favorite'
                    theme_text_color:'Custom'
                    text_color: 0,0,0,1
                    valign:"center"
                    halign:"center"
            MDBoxLayout:
                orientation:'vertical'
                MDIconButton:
                    pos_hint:{'center_x':.5,'center_y':.5}
                    icon:'account'
                    theme_text_color:'Custom'
                    text_color:   1,1, 1, 1
                MDLabel:
                    text:'Account'
                    theme_text_color:'Custom'
                    text_color: 0,0,0,1
                    valign:"center"
                    halign:"center"

